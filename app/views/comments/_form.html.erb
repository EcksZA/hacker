
<% if @commentable_type == 'Link' %>
  <%= form_for [@link, @comment] do |f| %>
  <input type='hidden' name='commentable_type' value='Link'>
    <div class='form-group'>
      <%= f.label :comment %>
    </div>
    <div class='form-group'>
      <%= f.text_area :comment, size: "100x10" %>
    </div>
    <%= button_to 'Submit', link_comments_path(@link), :class => 'btn btn-success' %>
  <% end %>

<% else @commentable_type == 'Comment' %>
  <%= form_for [@commentable, @comment] do |f| %>
  <input type='hidden' name='commentable_type' value='Comment'>
    <div class='form-group'>
      <%= f.label :comment %>
    </div>
    <div class='form-group'>
      <%= f.text_area :comment, size: "100x10" %>
    </div>
    <%= button_to 'Submit', comment_comments_path(@commentable), :class => 'btn btn-success' %>
  <% end %>

<% end %>
