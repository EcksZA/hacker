<% content_for(:title, 'Comments | Hacker') %>

<h1><a href="<%= @link.url %>"><%= @link.title %></a></h1>
<p>Submitted by: <a href="/users/<%= @link.user.id %>"><%= @link.user.name %></a></p>

<h3>Comments</h3>

<% @comments.each do |comment| %>
  <p><%= comment.comment %></p>
   <%= link_to 'Edit', edit_link_comment_path(comment.link, comment), :class => 'btn btn-info' %>
   <%= link_to  'Delete', link_comment_path(@link, comment), :data => {
                          :confirm => 'Are you sure you want to delete this comment',
                          :method => 'delete' },
                          :class => 'btn btn-danger' %>
<%end %>

